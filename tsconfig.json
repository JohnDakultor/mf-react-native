{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-native",
    "module": "ESNext",
    "rootDir": "./",
    "moduleResolution": "node10",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "declarations.d.ts",
    "src/**/*"
  ],
  "extends": "expo/tsconfig.base"
}
